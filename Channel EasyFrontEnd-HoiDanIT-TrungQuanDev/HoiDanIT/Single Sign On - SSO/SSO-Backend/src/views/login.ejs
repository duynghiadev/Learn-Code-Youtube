<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      http-equiv="X-UA-Compatible"
      content="IE=edge"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>SSO Login</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Font Icon CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  </head>

  <style>
    .bi-google {
      font-size: 30px;
      color: green;
      cursor: pointer;
      padding: 0 7px;
    }

    .bi-facebook {
      font-size: 30px;
      color: blue;
      cursor: pointer;
      padding: 0 7px;
    }

    .login-container {
      padding-top: 50px;
    }

    .none-flash {
      display: none;
    }
  </style>

  <script>
    $(document).ready(function () {
      $('#btnLogin').on('click', function () {
        const username = $('#username').val()
        const password = $('#password').val()
        const serviceURL = $('#redirectURL').val()

        $('#flashMsg').empty('')
        $.ajax({
          type: 'POST',
          url: `${window.location.origin}/login`,
          data: {
            username,
            password,
            serviceURL
          },
          withCredentials: true,
          success: function (data) {
            $('#flashMsg').addClass('none-flash')
            const redirectURL = `${data.redirectURL}/code?ssoToken=${data.code}`
            window.location.href = redirectURL
          },
          error: function (request, status, error) {
            $('#password').val('')
            $('#flashMsg').removeClass('none-flash')
            $('#flashMsg').append(request.responseText)
          }
        })
      })
    })
  </script>

  <body>
    <input
      value="<%= redirectURL %>"
      hidden
      id="redirectURL"
    />
    <div class="container">
      <div class="row">
        <div class="login-container col-6 mx-auto">
          <fieldset class="border rounded-3 p-3">
            <legend class="float-none w-auto px-3">Login Form:</legend>
            <div
              class="alert alert-danger my-1 none-flash"
              role="alert"
              id="flashMsg"
            >
            </div>
            <div class="mb-3">
              <label class="form-label">Username:</label>
              <div class="input-group has-validation">
                <input
                  type="text"
                  class="form-control"
                  name="username"
                  id="username"
                />
                <div class="invalid-feedback">Please choose a username</div>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <div class="input-group has-validation">
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password"
                />
                <div class="invalid-feedback">Please choose a username</div>
              </div>
            </div>
            <button
              type="button"
              id="btnLogin"
              class="btn btn-primary"
            >
              Login
            </button>
            <hr />
            <div>
              <div style="text-align: center">
                <span>or login with:</span>
              </div>
              <div
                class="social"
                style="text-align: center"
              >
                <a href="/auth/google">
                  <i
                    class="bi bi-google"
                    title="Login with Google"
                  ></i>
                </a>
                <a>
                  <i
                    class="bi bi-facebook"
                    title="Login with Facebook"
                  ></i>
                </a>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </body>
</html>
